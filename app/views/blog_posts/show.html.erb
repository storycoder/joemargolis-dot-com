<h4><%= @blog_post.title %></h4>

<div class="panel-body">
  <p>by <strong><%= @blog_post.author %></strong> <span class="posted-at">posted at: <%= @blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></span><br /></p>
	<p style="font-size:18px;">
	  <%= @blog_post.blog_entry %>
	</p>
</div>

<%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "btn btn-warning" %> |
<%= link_to 'Back', blog_posts_path, class: "btn btn-primary" %>
